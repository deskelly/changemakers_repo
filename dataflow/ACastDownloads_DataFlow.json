{
	"name": "ACastDownloads_DataFlow",
	"properties": {
		"folder": {
			"name": "ACast"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Acast_GetFiles",
						"type": "DatasetReference"
					},
					"name": "SourceProcessFiles"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ACastDownloads_AzureSqlTable",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: true,",
				"     purgeFiles: true) ~> SourceProcessFiles",
				"SourceProcessFiles derive(Date = toDate(Date, 'yyyy-MM-dd'),",
				"          Downloads = toInteger(Downloads)) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     postSQLs:['delete from Changemakers_Combined_Overview where sub_channel = \\'Acast\\' and impression_by_date is null;','insert into Changemakers_Combined_Overview (channel, sub_channel, date, timestamp, month, week, downloads_by_date)\\n    select\\n\\n        \\'Podcast/Vodcast\\' as channel\\n        ,\\'Acast\\' as sub_channel\\n        , date \\n        , date as timestamp\\n        , cast(format(date, \\'yyyyMM\\') as int) as month\\n        , cast(concat(left(date,4),  right(datepart(ww, date) + 100, 2)) as int) as week\\n        , downloads as downloads_by_date\\n    from Raw_ACastDownloads'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          date = Date,",
				"          downloads = Downloads",
				"     )) ~> sink1"
			]
		}
	}
}