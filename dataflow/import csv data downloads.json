{
	"name": "import csv data downloads",
	"properties": {
		"folder": {
			"name": "Old/Acast File Imports"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Acast_Downloads_All_Time_Data_CSV",
						"type": "DatasetReference"
					},
					"name": "DownloadsAllTimeDailyCSV"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ChangeMakers_Staging",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Date as string,",
				"          Downloads as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> DownloadsAllTimeDailyCSV",
				"DownloadsAllTimeDailyCSV derive(Date = toDate(Date, 'yyyy-MM-dd'),",
				"          Downloads = toInteger(Downloads),",
				"          Week = year(toDate(Date, 'yyyy-MM-dd')) * 100 + weekOfYear(toDate(Date, 'yyyy-MM-dd')),",
				"          Month = year(toDate(Date, 'yyyy-MM-dd')) * 100 + month(toDate(Date, 'yyyy-MM-dd')),",
				"          Year = year(toDate(Date, 'yyyy-MM-dd')),",
				"          TypeData = 'Downloads') ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          recordDate as date,",
				"          recordWeek as integer,",
				"          recordMonth as integer,",
				"          recordYear as integer,",
				"          typeData as string,",
				"          noTimes as integer",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     recreate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          recordDate = Date,",
				"          recordWeek = Week,",
				"          recordMonth = Month,",
				"          recordYear = Year,",
				"          typeData = TypeData,",
				"          noTimes = Downloads",
				"     )) ~> sink1"
			]
		}
	}
}